<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clWarningDialogRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customizable_dialog_bg"
    android:gravity="center"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieCustomizableDialog"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/tvCustomizableDialogDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/sofiaprosemibold"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnCustomizableDialogOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/customizable_dialog_ripple"
        android:fontFamily="@font/sofiaprosemibold"
        android:text="@string/warning_dialog_action"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:backgroundTint="@color/yellow" />

</LinearLayout>