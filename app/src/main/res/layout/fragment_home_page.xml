<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="fragmentHomePageObject"
            type="com.filozilla.fragments.HomePageFragment" />
        <import type="android.view.View" />
        <import type="android.graphics.Color" />
        <variable
            name="tabController"
            type="Boolean" />
        <variable
            name="dividerController"
            type="Boolean" />
        <variable
            name="dividerController2"
            type="Boolean" />
        <variable
            name="dividerController3"
            type="Boolean" />
        <variable
            name="dividerController4"
            type="Boolean" />
        <variable
            name="dividerController5"
            type="Boolean" />
        <variable
            name="dividerController6"
            type="Boolean" />
        <variable
            name="dividerController7"
            type="Boolean" />
        <variable
            name="dividerController8"
            type="Boolean" />
        <variable
            name="differentPlaceController"
            type="Boolean" />
        <variable
            name="differentPlaceController2"
            type="Boolean" />
        <variable
            name="dailyPickUpText"
            type="String" />
        <variable
            name="monthlyPickUpText"
            type="String" />
        <variable
            name="dailyPickUpDrofOffDate"
            type="String" />
        <variable
            name="monthlyPickUpDrofOffDate"
            type="String" />
        <variable
            name="promotionController"
            type="Boolean" />
        <variable
            name="promotionController2"
            type="Boolean" />
        <variable
            name="promotionCode"
            type="String" />
        <variable
            name="promotionCode2"
            type="String" />
        <variable
            name="findCarVisibility"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHomePageRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/second_color">

        <ScrollView
            android:id="@+id/svHomePage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbarThumbVertical="@color/yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSvHomePage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/second_color"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clHomePageTop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    app:layout_constraintBottom_toTopOf="@+id/clHomePageTabHolder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ivHomePageTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:transitionName="@string/icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5"
                        app:srcCompat="@drawable/filozilla_top"
                        android:contentDescription="@string/app_name" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clHomePageTabHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/clHomePageFormHolder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clHomePageTop">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clHomePageTabsHolder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/cl_search_tab_bg"
                        android:elevation="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clHomePageTabDaily"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@{tabController ? @drawable/cl_search_tab_bg : @drawable/cl_search_tab_bg2}"
                            android:onClick="@{() -> fragmentHomePageObject.tabDailyOnClick()}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/clHomePageTabMonthly"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tvHomePageTabDaily"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sofiaproregular"
                                android:gravity="center"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:textColor="@color/second_color"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clHomePageTabMonthly"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@{tabController ? @drawable/cl_search_tab_bg2 : @drawable/cl_search_tab_bg}"
                            android:onClick="@{() -> fragmentHomePageObject.tabMonthlyOnClick()}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/clHomePageTabDaily"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tvHomePageTabMonthly"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sofiaproregular"
                                android:gravity="center"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:textColor="@color/second_color"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clHomePageFormHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/cl_tab_holder_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clHomePageTabHolder">

                    <LinearLayout
                        android:id="@+id/linearLayoutDailyTabHolder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvDailyPickUp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/sofiaprolight"
                            android:gravity="start"
                            android:text="@{dailyPickUpText}"
                            android:textColor="@color/hint_color4"
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/etDailyPickUp"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:drawableStart="@{dividerController ? @drawable/location_f : @drawable/location}"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/sofiaproregular"
                            android:hint="@string/pickup_hint"
                            android:inputType="textCapSentences"
                            android:onClick="@{() -> fragmentHomePageObject.dailyPickUpOnClick()}"
                            android:textColorHint="@color/hint_color4"
                            android:textSize="15sp"
                            android:importantForAutofill="no" />

                        <View
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@{dividerController ? @color/second_color : @color/divider_color}" />

                        <TextView
                            android:id="@+id/tvDailyDropOff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/sofiaprolight"
                            android:gravity="start"
                            android:text="@string/dropoff_text"
                            android:textColor="@color/hint_color4"
                            android:textSize="13sp"
                            android:visibility="@{differentPlaceController ? View.VISIBLE : View.GONE}" />

                        <EditText
                            android:id="@+id/etDailyDropOff"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:drawableStart="@{dividerController2 ? @drawable/location_f : @drawable/location}"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/sofiaproregular"
                            android:hint="@string/pickup_hint"
                            android:inputType="textCapSentences"
                            android:onClick="@{() -> fragmentHomePageObject.dailyDropOffOnClick()}"
                            android:textColorHint="@color/hint_color4"
                            android:textSize="15sp"
                            android:visibility="@{differentPlaceController ? View.VISIBLE : View.GONE}"
                            android:importantForAutofill="no" />

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@{dividerController2 ? @color/second_color : @color/divider_color}"
                            android:visibility="@{differentPlaceController ? View.VISIBLE : View.GONE}" />

                        <LinearLayout
                            android:id="@+id/linearLayoutDailyDifferentPlace"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="horizontal">

                            <Switch
                                android:id="@+id/switchDailyDifferentPlace"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/sofiaproregular"
                                android:paddingEnd="2dp"
                                android:text="@string/different_place"
                                android:textAlignment="textStart"
                                android:textColor="@color/hint_color4"
                                android:textSize="13sp"
                                android:thumb="@drawable/circle_selector"
                                android:track="@drawable/switch_selector"
                                tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvDailyPickUpDropOffDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/sofiaprolight"
                            android:gravity="start"
                            android:text="@string/pickup_dropoff_date"
                            android:textColor="@color/hint_color4"
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/etDailyPickUpDropOffDate"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:drawableStart="@{dividerController3 ? @drawable/calendar_f : @drawable/calendar}"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/sofiaproregular"
                            android:text="@{dailyPickUpDrofOffDate}"
                            android:textColorHint="@color/hint_color4"
                            android:textSize="15sp"
                            android:onClick="@{() -> fragmentHomePageObject.dailyPickUpDropOffDate()}"
                            android:importantForAutofill="no"
                            tools:ignore="TextFields" />

                        <View
                            android:id="@+id/divider3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@{dividerController3 ? @color/second_color : @color/divider_color}" />

                        <LinearLayout
                            android:id="@+id/linearLayoutDailyAgeRange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="26dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="horizontal">

                            <Switch
                                android:id="@+id/switchDailyAgeRange"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/sofiaproregular"
                                android:paddingEnd="2dp"
                                android:text="@string/age_range"
                                android:textAlignment="textStart"
                                android:textColor="@color/hint_color4"
                                android:textSize="13sp"
                                android:thumb="@drawable/circle_selector"
                                android:track="@drawable/switch_selector"
                                tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etDailyPromotion"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="26dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:digits="QWERTYUIOPASDFGHJKLZXCVBNM0123456789-"
                            android:fontFamily="@font/sofiaproregular"
                            android:hint="@string/promotion_code_hint"
                            android:inputType="textCapCharacters"
                            android:maxLength="9"
                            android:text="@{promotionCode}"
                            android:textColorHint="@color/hint_color4"
                            android:textSize="15sp"
                            android:visibility="@{promotionController ? View.VISIBLE : View.GONE}"
                            tools:ignore="RtlSymmetry"
                            android:importantForAutofill="no" />

                        <View
                            android:id="@+id/divider4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@{dividerController4 ? @color/second_color : @color/divider_color}"
                            android:visibility="@{promotionController ? View.VISIBLE : View.GONE}" />

                        <LinearLayout
                            android:id="@+id/linearLayoutDailyPromotion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="40dp"
                            android:orientation="horizontal">

                            <Switch
                                android:id="@+id/switchDailyPromotion"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/sofiaproregular"
                                android:paddingEnd="2dp"
                                android:text="@string/promotion_code_text"
                                android:textAlignment="textStart"
                                android:textColor="@color/hint_color4"
                                android:textSize="13sp"
                                android:thumb="@drawable/circle_selector"
                                android:track="@drawable/switch_selector"
                                tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutMonthlyTabHolder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvMonthlyPickUp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/sofiaprolight"
                            android:gravity="start"
                            android:text="@{monthlyPickUpText}"
                            android:textColor="@color/hint_color4"
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/etMonthlyPickUp"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:drawableStart="@{dividerController5 ? @drawable/location_f : @drawable/location}"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/sofiaproregular"
                            android:hint="@string/pickup_hint"
                            android:inputType="textCapSentences"
                            android:onClick="@{() -> fragmentHomePageObject.monthlyPickUpOnClick()}"
                            android:textColorHint="@color/hint_color4"
                            android:textSize="15sp"
                            android:importantForAutofill="no" />

                        <View
                            android:id="@+id/divider5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@{dividerController5 ? @color/second_color : @color/divider_color}" />

                        <TextView
                            android:id="@+id/tvMonthlyDropOff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/sofiaprolight"
                            android:gravity="start"
                            android:text="@string/dropoff_text"
                            android:textColor="@color/hint_color4"
                            android:textSize="13sp"
                            android:visibility="@{differentPlaceController2 ? View.VISIBLE : View.GONE}" />

                        <EditText
                            android:id="@+id/etMonthlyDropOff"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:drawableStart="@{dividerController6 ? @drawable/location_f : @drawable/location}"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/sofiaproregular"
                            android:hint="@string/pickup_hint"
                            android:inputType="textCapSentences"
                            android:onClick="@{() -> fragmentHomePageObject.monthlyDropOffOnClick()}"
                            android:textColorHint="@color/hint_color4"
                            android:textSize="15sp"
                            android:visibility="@{differentPlaceController2 ? View.VISIBLE : View.GONE}"
                            android:importantForAutofill="no" />

                        <View
                            android:id="@+id/divider6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@{dividerController6 ? @color/second_color : @color/divider_color}"
                            android:visibility="@{differentPlaceController2 ? View.VISIBLE : View.GONE}" />

                        <LinearLayout
                            android:id="@+id/linearLayoutMonthlyDifferentPlace"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="horizontal">

                            <Switch
                                android:id="@+id/switchMonthlyDifferentPlace"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/sofiaproregular"
                                android:paddingEnd="2dp"
                                android:text="@string/different_place"
                                android:textAlignment="textStart"
                                android:textColor="@color/hint_color4"
                                android:textSize="13sp"
                                android:thumb="@drawable/circle_selector"
                                android:track="@drawable/switch_selector"
                                tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvMonthlyPickUpDropOffDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/sofiaprolight"
                            android:gravity="start"
                            android:text="@string/pickup_dropoff_date2"
                            android:textColor="@color/hint_color4"
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/etMonthlyPickUpDropOffDate"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:drawableStart="@{dividerController7 ? @drawable/calendar_f : @drawable/calendar}"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/sofiaproregular"
                            android:text="@{monthlyPickUpDrofOffDate}"
                            android:textColorHint="@color/hint_color4"
                            android:textSize="15sp"
                            android:onClick="@{() -> fragmentHomePageObject.monthlyPickUpDropOffDate()}"
                            android:importantForAutofill="no"
                            tools:ignore="TextFields" />

                        <View
                            android:id="@+id/divider7"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@{dividerController7 ? @color/second_color : @color/divider_color}" />

                        <LinearLayout
                            android:id="@+id/linearLayoutMonthlyAgeRange"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="26dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="horizontal">

                            <Switch
                                android:id="@+id/switchMonthlyAgeRange"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/sofiaproregular"
                                android:paddingEnd="2dp"
                                android:text="@string/age_range"
                                android:textAlignment="textStart"
                                android:textColor="@color/hint_color4"
                                android:textSize="13sp"
                                android:thumb="@drawable/circle_selector"
                                android:track="@drawable/switch_selector"
                                tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etMonthlyPromotion"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="26dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:digits="QWERTYUIOPASDFGHJKLZXCVBNM0123456789-"
                            android:fontFamily="@font/sofiaproregular"
                            android:hint="@string/promotion_code_hint"
                            android:inputType="textCapCharacters"
                            android:maxLength="9"
                            android:text="@{promotionCode2}"
                            android:textColorHint="@color/hint_color4"
                            android:textSize="15sp"
                            android:visibility="@{promotionController2 ? View.VISIBLE : View.GONE}"
                            tools:ignore="RtlSymmetry"
                            android:importantForAutofill="no" />

                        <View
                            android:id="@+id/divider8"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@{dividerController8 ? @color/second_color : @color/divider_color}"
                            android:visibility="@{promotionController2 ? View.VISIBLE : View.GONE}" />

                        <LinearLayout
                            android:id="@+id/linearLayoutMonthlyPromotion"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="40dp"
                            android:orientation="horizontal">

                            <Switch
                                android:id="@+id/switchMonthlyPromotion"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/sofiaproregular"
                                android:paddingEnd="2dp"
                                android:text="@string/promotion_code_text"
                                android:textAlignment="textStart"
                                android:textColor="@color/hint_color4"
                                android:textSize="13sp"
                                android:thumb="@drawable/circle_selector"
                                android:track="@drawable/switch_selector"
                                tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml" />
                        </LinearLayout>


                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvHomePageFindCar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="32dp"
                    android:onClick="@{() -> fragmentHomePageObject.findCarOnClick(etDailyPickUp.getText().toString().trim(), etDailyDropOff.getText().toString().trim(), etDailyPickUpDropOffDate.getText().toString().trim(), etDailyPromotion.getText().toString().trim(), etMonthlyPickUp.getText().toString().trim(), etMonthlyDropOff.getText().toString().trim(), etMonthlyPickUpDropOffDate.getText().toString().trim(), etMonthlyPromotion.getText().toString().trim())}"
                    android:visibility="@{findCarVisibility ? View.GONE : View.VISIBLE}"
                    app:cardBackgroundColor="@color/yellow2"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clHomePageFormHolder">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clHomePageFindCar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tvHomePageFindCar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/sofiaprosemibold"
                            android:text="@string/find_car"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.5" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>